<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LevelPage" >

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tvLevel"
        android:textColor="@color/zhizise"
        android:textSize="35sp" />

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_gravity="center"
    	android:gravity="center"
    	android:orientation="horizontal" >
        
        <ImageButton 
            android:id="@+id/imgbtnLevel1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/douzi_guanqia1"/>
        <ImageButton 
            android:id="@+id/imgbtnLevel2"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/douzi_guanqia2"/>
        <ImageButton 
            android:id="@+id/imgbtnLevel3"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/douzi_guanqia3"/>
        <ImageButton 
            android:id="@+id/imgbtnLevel4"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/douzi_guanqia4"/>
        <ImageButton 
            android:id="@+id/imgbtnLevel5"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/douzi_guanqia5"/>
    </LinearLayout>

</LinearLayout>